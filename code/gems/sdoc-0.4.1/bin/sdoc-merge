#!/usr/bin/env ruby -KU
require File.dirname(__FILE__) + '/../lib/sdoc' # add extensions
require 'sdoc/merge'

begin
  m = SDoc::Merge.new
  m.merge(ARGV)
rescue SystemExit
  raise
rescue Exception => e
  if $DEBUG_RDOC then
    $stderr.puts e.message
    $stderr.puts "#{e.backtrace.join "\n\t"}"
    $stderr.puts
  elsif Interrupt === e then
    $stderr.puts
    $stderr.puts 'Interrupted'
  else
    $stderr.puts "uh-oh! SDoc merge had a problem:"
    $stderr.puts e.message
  end
  exit 1
end
