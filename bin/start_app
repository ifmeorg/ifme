#!/usr/bin/env ruby
require 'pathname'
require 'fileutils'
include FileUtils

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../', __FILE__)

chdir APP_ROOT do
  # This script starts your application.

  puts "\n== Starting application server (foreman) =="
  system('foreman start -f Procfile.dev')
end
