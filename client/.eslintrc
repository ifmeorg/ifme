{
  "plugins": ["flowtype", "jest", "react"],
  "extends": ["airbnb", "plugin:flowtype/recommended"],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "root": true,
  "rules": {
    // When this [bug](https://github.com/shakacode/react_on_rails/issues/1198) is resolved we can remove the next line and enforce default exports
    "import/no-named-as-default": ["off"],
    "import/prefer-default-export": ["off"],
    "react/require-default-props": ["off"],
    "jsx-a11y/label-has-for": ["off"],
    "no-alert": ["off"],
    "react/sort-comp": [2, {
      "order": [
        "type-annotations",
        "static-methods",
        "lifecycle",
        "everything-else",
        "/^render.+$/",
        "render"
      ]
    }],
    "react/prefer-stateless-function": ["off"]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "./app",
          ".."
        ]
      }
    }
  }
}
