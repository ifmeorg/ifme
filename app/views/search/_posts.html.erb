<div class="marginBottom">
  <%= form_for(:search, url: posts_search_index_path, html: { method: :get }) do |f| %>
    <div class="search">
      <%= react_component 'Input', props: {
        type: 'search',
        name: 'search[name]',
        id: 'search_name',
        label: t('search.search_by_name'),
        placeholder: t('search.search_by_name'),
        dark: true
      } %>
      <%= f.hidden_field :data_type, value: local_assigns[:data_type] %>
      <% if @moments %>
        <div class="searchInputMultiSelect">
          <%= react_component 'Input', props: {
              type: 'multiSelect',
              id: 'search_filters',
              name: 'search[filters]',
              label: t('search.filter_by'),
              checkboxes: @multiselect_checkboxes
            } %>
        </div>
      <% end %>
      <%= f.submit t('search.label'), class: 'searchSubmit buttonDarkL' %>
    </div>
  <% end %>
</div>
