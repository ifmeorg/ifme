<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="subtitle"><%= t('devise.registrations.new.subtitle') %></div>
  <div class="spacer"></div>

  <div class="center">
    <div class="field"><div class="label"><%= f.label t('common.name') %></div>
    <%= f.text_field :name %></div>

    <div class="field"><div class="label"><%= f.label t('devise.registrations.new.label') %></div>
    <%= f.text_field :location, class: 'spacing', placeholder: t('common.location') %>
    <%= f.email_field :email, placeholder: t('common.email') %></div>

    <div class="field"><div class="label"><%= f.label :password %></div>
      <%= f.password_field :password, autocomplete: "off", class: 'spacing', placeholder: t('devise.password') %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: t('devise.registrations.placeholders.repeat_password') %></div>

    <div class="actions">
      <%= f.hidden_field :timezone %>
      <%= f.submit t('devise.registrations.new.sign_up') %>
    </div>
  </div>
<% end %>

<div class="center">
  <%= render "devise/shared/links" %>
</div>
