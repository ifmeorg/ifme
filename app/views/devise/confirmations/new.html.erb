<h2><%= t('devise.confirmations.resend_confirmation')  %></h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="label"><%= t('common.form.email') %></div>
  <%= f.email_field :email, 'aria-label': t('common.form.email') %>

  <%= f.submit t('devise.confirmations.resend_confirmation'), class: 'buttonGhostM smallMarginTop' %>
<% end %>

<%= render "devise/shared/links" %>
