<%= simple_format(@group.description) %>
<strong>Led by:</strong>
<% @group_leaders.each_with_index do |leader, index| %>
	<% if leader.userid == current_user.id %>
		<%= link_to 'You', profile_index_path(:userid => leader.userid) %>
	<% else %>
		<%= link_to User.where(id: leader.userid).first.name, profile_index_path(userid: leader.userid) %>
	<% end %>
	<% if index+1 < @group_leaders.length %>
		<%= ', ' %>
	<% end %>
<% end %>

<% if @meetings.length > 0 %>
  <div class="spacer"></div>
  <% @meetings.each_with_index do |meeting, index| %>
  	<% if index+1 == @meetings.length %>
  		<div class="meeting" style="margin-bottom: 0">
  	<% else %>
    	<div class="meeting">
    <% end %>
    	<h1 class="meeting_name"><%= link_to meeting.name, edit_meeting_path(meeting) %></h1>
	      	<%= simple_format(meeting.description) %>
	      	<strong>Location:</strong>
	      	<% if meeting.location.include? "http://" or meeting.location.include? "https://" or meeting.location.include? "www." %>
	      		<%= link_to meeting.location, meeting.location %>
	      	<% else %>
	      		<%= link_to meeting.location, "https://www.google.com/maps/place/" + meeting.location %>
	      	<% end %>
	      	<br><strong>Time:</strong> <%= meeting.time %>
		<br><strong>Date:</strong> <%= meeting.date %>
	      	<br><strong>Led by:</strong>
	      	<% meeting_leaders = MeetingMember.where(meetingid: meeting.id, leader: true).all %>
	      	<% is_leader = false %>
	      	<% meeting_leaders.each_with_index do |leader, index| %>
				<% if leader.userid == current_user.id %>
					<% is_leader = true %>
					<%= link_to 'You', profile_index_path(:userid => leader.userid) %>
				<% else %>
					<%= link_to User.where(id: leader.userid).first.name, profile_index_path(userid: leader.userid) %>
				<% end %>
				<% if index+1 < meeting_leaders.length %>
					<%= ', ' %>
				<% end %>
			<% end %>
			<% if is_leader %>
				<br>
				<i class="fa fa-trash-o action"></i><%= link_to 'Delete the event', meeting, method: :delete, data: { confirm: 'Are you sure?' } %>
				<br>
			<% end %>

	      	<br>
	      	<% if MeetingMember.where(meetingid: meeting.id, userid: current_user.id).exists? %>
				<strong>You are attending. Change your mind? <%= link_to 'Leave?', leave_meetings_path(meetingid: meeting.id) %></strong>
			<% elsif meeting.maxmembers > 0 %>
				<strong>You are not attending. There are <%= meeting.maxmembers-MeetingMember.where(id: meeting.id).count %> spots left to fill! <%= link_to 'Join!', join_meetings_path(meetingid: meeting.id) %></strong>
			<% else %>
				<strong>You are not attending. There is still room to <%= link_to 'join', join_meetings_path(meetingid: meeting.id) %>!</strong>
		 	<% end %>

		 	<% meeting_members = MeetingMember.where(["meetingid = ? and userid != ?", meeting.id, current_user.id]).all %>
		 	<% if meeting_members.count > 0 %>
			 	<br>
			 	<br>
			 	<strong>Attending:</strong>
			 	<% meeting_members.each_with_index do |member, index| %>
					<%= link_to User.where(id: member.userid).first.name, profile_index_path(userid: member.userid) %>
					<% if index+1 < meeting_members.length %>
						<%= ', ' %>
					<% end %>
			 	<% end %>
			<% end %>
	    </div>
  <% end %>
<% end %>
