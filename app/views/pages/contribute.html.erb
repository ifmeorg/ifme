<% title t('navigation.contribute') %>

<div class="main_message">
	<%= t('pages.contribute.main_message_one') %>
</div>

<div class="message_text">
  <%= raw t('pages.contribute.message_text_one', {
    email_link: link_to(t('common.write_to_us'), "mailto:#{t('email')}"),
    slack_link: link_to(t('pages.contribute.slack'), 'https://ifme.slack.com', target: 'blank'),
    github_link: link_to(t('navigation.github'), 'https://github.com/julianguyen/ifme', target: 'blank')
    })
  %>
	<div class="spacer"></div>
</div>

<div class="contributors">
  <% @blurbs.each do |blurb| %>
    <div class="contributor center">
      <%= ProfilePicture.fetch(blurb["image"], 'contributor_picture') %>
      <h1 class="contributor_name center"><%= blurb["name"] %></h1>
      <div class="contributor_profile"><%= blurb["profile"] %></div>
      <div class="spacer"></div>
      <div class="align_left">
        <i class="fa fa-location-arrow fa-inline"></i><%= " #{blurb["location"]}" %>
      </div>
      <div class="align_right">
        <%= content_tag(:i, '', class: "fa fa-#{blurb["social"]} fa-inline") %><%= link_to(blurb["link_name"], blurb["link"], target: 'blank') %>
      </div>
      <div class="clear"></div>
    </div>
  <% end %>
</div>

<div class="spacer"></div>

<div class="main_message">
  <%= t('pages.contribute.more_contributors') %>
</div>

<div class="message_text">
  <%= t('pages.contribute.thanks') %> <%= print_contributors(@contributors) %>
</div>
