<div class="messageHero">
  <div class="messageMain">
    <div class="messageMainLogo">
      <%= react_component('Logo', props: { lg: true }) %>
    </div>
    <%= t('app_description') %>
  </div>
  <div class="messageBody">
    <div class="messageBodyLinks">
      <%= link_to t('navigation.about'), about_path, class: 'buttonL' %>
      <%= link_to t('common.actions.join'), new_user_registration_path, class: 'buttonGhostL' %>
    </div>
  </div>
</div>

<div class="messageHero">
  <div class="gridThree">
  <% @posts.first(3).each do |p| %>
    <div class="gridThreeItem">
    <%= react_component('Resource', props: {
      external: true,
      title: p['link_name'],
      link: p['link'],
      author: p['author']
    }) %>
    </div>
  <% end %>
  </div>
</div>

<div class="messageHero">
  <div class="messageMain">
    <%= t('pages.home.not_signed_in.main_message_one') %>
  </div>
  <div class="messageBody">
    <%= t('pages.home.not_signed_in.message_text_one') %>
    <div class="spacer"></div>
  </div>
  <div class="gridThree center">
    <div class="gridThreeItem">
      <%= inline_svg('phone.svg', aria_hidden: true, class: 'notSignedInIcon') %>
      <div class="spacer"></div>
      <%= t('pages.home.not_signed_in.message_one') %>
    </div>
    <div class="gridThreeItem">
      <%= inline_svg('lotus.svg', aria_hidden: true, class: 'notSignedInIcon') %>
      <div class="spacer"></div>
      <%= t('pages.home.not_signed_in.message_two') %>
    </div>
    <div class="gridThreeItem">
      <%= inline_svg('documents.svg', aria_hidden: true , class: 'notSignedInIcon') %>
      <div class="spacer"></div>
      <%= t('pages.home.not_signed_in.message_three') %>
    </div>
  </div>
</div>

<div class="messageMain">
  <%= t('pages.home.not_signed_in.main_message_two') %>
</div>
<div class="messageBody">
  <%= raw t('pages.home.not_signed_in.message_text_two', {
    help: link_to(t('pages.home.not_signed_in.help'), contribute_path),
    feedback: link_to(t('navigation.feedback'), 'http://goo.gl/forms/8EqoJDDiXY', target: 'blank')
  }) %>
  <div class="spacer"></div>
  <div class="gridMany">
    <% @blurbs.each do |blurb| %>
      <div class="gridManyItem">
        <%= ProfilePicture.fetch(blurb['image'], className: 'home_picture') %>
      </div>
    <% end %>
  </div>
</div>
