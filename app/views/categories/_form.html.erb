<%= form_for(@category) do |f| %>
  <%= react_component('Form', props: {
    inputs: [
      {
        id: 'category_name',
        type: 'text',
        name: 'category[name]',
        label: t('common.name'),
        value: @category.name || nil,
        required: true,
        info: t('categories.form.name_hint'),
        dark: true
      },
      {
        id: 'category_description',
        type: 'textarea',
        name: 'category[description]',
        label: t('common.form.description'),
        value: @category.description || nil,
        dark: true,
      },
      {
        id: 'submit',
        type: 'submit',
        value: t('common.actions.submit'),
        dark: true
      }
    ]
  }) %>
<% end %>
