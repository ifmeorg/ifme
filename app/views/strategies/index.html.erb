<div class="subtitle">
  Create strategies to achieve desired thoughts and attitudes towards triggers.
</div>

<% if @strategies.length > 0 %>
  <div class="spacer"></div>
  <% @strategies.each do |strategy| %>
    <div class="strategy">
      <h1 class="strategy_name"><%= link_to strategy.name, strategy %></h1>
      <strong>Created</strong>: <%= local_time(strategy.created_at, '%A, %B %e, %Y at %l:%M %P') %>
      <% if strategy.category.count > 0 %>
        <br>
        <strong>
          <% if strategy.category.count == 1 %>
            Category:
          <% else %>
            Categories:
          <% end %>
        </strong>
        <% strategy.category.each do |item| %>
          <%= fetch_taxonomies(strategy, "strategy", item, "category", false) %>
        <% end %>
      <% end %>
      <div style="margin-top: 20px">
        <i class="fa fa-pencil action"></i><%= link_to 'Edit', edit_strategy_path(strategy) %>
        <i class="fa fa-trash-o action" style="margin-left: 20px"></i><%= link_to 'Delete', strategy, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  <% end %>
<% end %>
