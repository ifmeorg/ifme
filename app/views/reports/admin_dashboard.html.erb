<h1>Reports</h1>
<table class="table">
  <thead>
    <tr>
      <th>ReportID</th>
      <th>ReporterId</th>
      <th>ReportedId</th>
      <th>Comments</th>
      <th>ReportType</th>
      <th>CommentID</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% Report.all.each do |report| %>
      <tr>
      <td><%= report.id%></td>
      <td><%= report.reporter_id %></td>
      <td><%= report.reportee_id %></td>
      <td><%= report.reasons %></td>
      <% if report.comment_id == -1 %>
        <td>user</td>
      <% else %>
        <td><%= Comment.where(id: report.comment_id).pluck(:commentable_type)[0] %></td>
      <% end %>
      <td><%= report.comment_id %></td>
      <td><%= link_to t('common.actions.delete'),  report_path(id: report.id), method: :delete, :onclick => "return confirm('Are you sure you want to delete this post?')" %></td> 
      </tr>
    <% end %>
  </tbody>
</table> 