<%= form_for(@mood) do |f| %>
<% if @mood.errors.any? %>
  <div class="error_explanation">
    <%= t('.error_explanation') %>
  </div>
<% end %>

  <div class="field">
    <div class="label">
      <%= f.label t('.name'), for: 'mood_name' %>
      <i class="fa fa-exclamation-circle align_right"></i>
      <div class="clear"></div>
    </div>
    <%= f.text_field :name, :class => "name_field" %>
  </div>

  <div class="field">
    <div class="label">
      <%= f.label t('.description'), for: 'mood_description' %>
    </div>
    <%= f.cktext_area :description, class: 'no_title special_textarea ckeditor' %>
  </div>

  <div class="actions align_right no_margin_bottom">
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.submit %>
  </div>

  <div class="clear"></div>

<% end %>
