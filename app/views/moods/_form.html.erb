<%= form_for(@mood) do |f| %>
  <%= react_component('Form', props: {
    inputs: [
      {
        id: 'mood_name',
        type: 'text',
        name: 'mood[name]',
        label: t('common.name'),
        value: @mood.name || nil,
        required: true,
        dark: true
      },
      {
        id: 'mood_description',
        type: 'textarea',
        name: 'mood[description]',
        label: t('common.form.description'),
        value: @mood.description || nil,
        dark: true,
      },
      {
        id: 'submit',
        type: 'submit',
        value: t('common.actions.submit'),
        dark: true
      }
    ]
  }) %>
<% end %>
