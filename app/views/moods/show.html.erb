<% title @mood.name %>
<% if @mood.description.present? && @mood.description.length > 0 %>
  <%= sanitize(@mood.description) %>
<% else %>
  <div class="messageMain">
    <%= t('warnings.no_description') %>
  </div>
  <div class="messageBody no_margin_bottom">
    <%= t('warnings.yes_description') %>
  </div>
<% end %>
<div class="gridItemBoxDark small_margin_top">
	<%= react_component('StoryActions', props: {
		dark: true,
		actions: {
			delete: {
				name: t('common.actions.delete'),
				link: url_for(@mood),
				dataConfirm: t('common.actions.confirm'),
				dataMethod: 'delete'
      },
      edit: {
				name: t('common.actions.edit'),
				link: edit_mood_path(@mood)
			}
		}
	}) %>
</div>
<%= render partial: '/tag_usage/index', locals: { data: @mood.id, data_type: 'mood', user_id: @mood.user_id } %>
