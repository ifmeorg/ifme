<%= form_for resource, as: resource_name, url: invitation_path(resource_name), html: { id: 'invitations', method: :post } do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= react_component 'Input', props: {
    type: 'text',
    name: 'user[email]',
    id: 'user_email',
    label: t('common.form.email'),
    placeholder: t('allies.form.placeholder'),
    dark: true,
    required: true
  } %>
  <div class="smallMarginTop">
    <%= f.submit t('devise.invitations.new.submit_button'), class: 'buttonDarkM' %>
  </div>
<% end %>
