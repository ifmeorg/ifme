<div class="dashboardNavProfile">
  <div class="dashboardNavProfilePicture">
    <%= ProfilePicture.fetch(current_user.avatar.url, className: 'dashboard_nav_profile_picture') %>
  </div>
  <div class="dashboardNavProfileInfo">
    <div>
      <%= current_user.name %>
    </div>
    <div class="dashboardNavProfileInfoLinks">
      <%= link_to(t('profile.index.title'), profile_index_path(uid: current_user.uid), class: 'buttonGhostS') %>
      <%= link_to(t('account.singular'), edit_user_registration_path, class: 'buttonGhostS') %>
      <%=
        link_to '', { class: 'notifications_button buttonGhostS', alt: t('notifications.plural') } do
          content_tag :i, '', class: 'fas fa-bell'
        end
      %>
    </div>
  </div>
</div>

<div class="dashboardNavLinks">
  <%= dashboard_nav_link_to(t('moments.plural'), moments_path) %>
  <%= dashboard_nav_link_to(t('categories.plural'), categories_path) %>
  <%= dashboard_nav_link_to(t('moods.plural'), moods_path) %>
  <%= dashboard_nav_link_to(t('strategies.plural'), strategies_path) %>
  <%= dashboard_nav_link_to(t('medications.index.title'), medications_path) %>
  <%= dashboard_nav_link_to(t('groups.plural'), groups_path) %>
  <%= dashboard_nav_link_to(t('allies.index.title'), allies_path) %>
</div>

<div class="dashboardNavActions">
  <%= link_to(t('shared.header.signout'), destroy_user_session_path, method: :delete, class: 'buttonGhostM') %>
</div>